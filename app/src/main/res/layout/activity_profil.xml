<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        app:tint="@color/primary_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:src="@drawable/user"
            app:strokeColor="@color/neutral_bg"
            app:strokeWidth="4dp"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/btnEditFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Foto"
            android:background="@drawable/bg_input_field"
            android:backgroundTint="@color/neutral_bg"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:layout_marginTop="-20dp"
            android:elevation="4dp"
            android:textColor="@color/primary_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:id="@+id/menuEditNama"
            style="@style/ProfileMenuItem">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nama"
                app:tint="@color/primary_dark"/>

            <TextView
                android:id="@+id/tvNamaProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova Fitriani"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuUbahPassword"
            style="@style/ProfileMenuItem">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock"
                app:tint="@color/primary_dark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah Password"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuLogout"
            style="@style/ProfileMenuItem">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logout"
                app:tint="@color/primary_dark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>